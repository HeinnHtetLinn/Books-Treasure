<div class="container">
<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <div class="d-flex justify-content-end">
        <div class="form-floating text-dark">
            <input class="form-control" placeholder="Enter Search Name" id="floatingInput" type="text" name="name" value="<%= search.name %>">
            <label for="floatingInput">Enter Search Name</label>
        </div>
        <button class="btn btn-secondary mx-4" type="submit">Search</button>
    </div>
</form>
<br>
    <% authors.forEach(author=>{ %>
        <div class="my-2 shadow text-dark bg-body rounded d-flex justify-content-between">
            <div class="p-2">
                <b class="text-uppercase fs-4">Author Name:</b>
                <div class="d-inline fs-4"><%= author.name %></div>
            </div>
            <div class="d-flex align-items-center">
                <a href="/authors/<%= author.id %>/edit" class="btn btn-sm btn-primary mx-1">Edit</a>
                <a href="/authors/<%= author.id %>" class="btn btn-sm btn-warning mx-1">View</a>
                <%- include("../partials/deleteForm", {url: `/authors/${author.id}`}) %>
            </div>
        </div>
    <% }) %>
</div>