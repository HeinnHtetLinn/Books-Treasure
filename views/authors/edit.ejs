<div class="container">
    <h3 class="text-center">Edit Name</h3>
    <form action="/authors/<%= author.id %>?_method=PUT" method="POST">
            <div class="form-floating text-dark">
                <input class="form-control" id="floatingInput" type="text" name="name" placeholder="Name" value="<%= author.name %>">
                <label for="floatingInput">Enter Your Name</label>
            </div>
            <button type="submit" class="btn btn-success mt-3">Change</button>
        </form>
</div>