<div class="container">
    <div class="row">
        <div class="col col-lg-4">
            <div>
                <% if(book.coverImagePath) {%>
                    <img src="<%= book.coverImagePath %>" class="img-fluid">
                <%} %>
            </div>
        </div>
        <div class="col col-lg-8">
            <div class="lh-lg"><b>Author</b>:</div>
            <div><%= book.author.name %></div>
            <div class="lh-lg"><b>Book Title</b>:</div>
            <div><%= book.title %></div>
            <div class="lh-lg"><b>Publish Date</b>:</div>
            <div><%= book.publishDate.toDateString() %></div>
            <div class="lh-lg"><b>Page Count</b>:</div>
            <div><%= book.pageCount %></div>
            <div class="lh-lg"><b>Description</b>:</div>
            <div><%= book.description%></div>
            <div class="d-flex align-items-center">
                <a href="/books/<%=book.id %>/edit" class="btn btn-secondary">Edit</a>
                <div class="mx-2">
                    <%- include("../partials/deleteForm", {url:`/books/${book.id}`}) %>
                </div>
            </div>
        </div>
    </div>
</div>