<div class="container">
    <div class="row">
    <% books.forEach(book=>{ %>
            <div class="col col-sm-12 col-md-6 col-lg-4 col-xl-3 mx-auto py-3">
                <div class="card mx-auto" style="width: 18rem;">
                    <a class="link d-block" href="/books/<%= book.id %>">
                        <img src="<%= book.coverImagePath %>" class="card-img-top rounded-md" width="200" height="300" alt="<%= book.title %>">
                    </a>
                    <div class="card-body bg-white text-dark">
                      <p>Title:<%= book.title %></p>
                      <p>Author:<%= book.author.name %></p>
                      <p>PublishDate:<%= book.publishDate.toDateString() %></p>
                    </div>
                  </div>
            </div>
            
            <!-- "<%= book.coverImagePath %>" -->
            <% }) %>
    </div>
</div>